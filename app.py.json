from flask import Flask, request, jsonify
from flask_cors import CORS
import openai
import os

app = Flask(__name__)
CORS(app)  # allow requests from the extension

openai.api_key = os.getenv("OPENAI_API_KEY")

@app.route("/")
def home():
    return {"status": "AutoFeed backend is running"}

@app.route("/ai_reply", methods=["POST"])
def ai_reply():
    data = request.get_json(force=True)
    text = data.get("text", "").strip()
    if not text:
        return jsonify({"error": "No text provided"}), 400

    try:
        # Example with OpenAI API (replace model if needed)
        response = openai.ChatCompletion.create(
            model="gpt-3.5-turbo",
            messages=[
                {"role": "system", "content": "You are an assistant that replies to tweets briefly and wittily."},
                {"role": "user", "content": text}
            ]
        )
        reply = response.choices[0].message.content.strip()
        return jsonify({"reply": reply})
    except Exception as e:
        return jsonify({"error": str(e)}), 500

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
